<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp" android:id="@+id/llApp">
	<ImageView android:src="@drawable/unibasel_with_bg"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical"
		android:id="@+id/ivAppIcon" android:layout_width="fill_parent"></ImageView>
	<TextView android:text="TextView" android:layout_height="wrap_content"
		android:lines="1"
		android:ellipsize="marquee" android:id="@+id/tvAppName"
		android:layout_gravity="center|center_horizontal" android:layout_width="wrap_content"></TextView>

</LinearLayout>
